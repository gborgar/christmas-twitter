<div class="row justify-content-center">
  <div class="col-12 col-md-8">
      <div class="nav-item"><a class="nav-link" aria-current="page" href="/posts/new"><i class="fa fa-plus-circle fa-3x"></i></a></div>
      <div class="list-group mb-1">
        {{#each posts as |post|}}
          <div class="list-group-item">
            <div class="d-flex">
              <small>{{ post.text }}</small>
            </div>
          </div>
          <div class="d-flex justify-content-around mb-3">
            <div class="p-2">@Author</div>
            <div class="p-2">
               <form action="/posts/{{post.id}}/like" method="post">
                <button type="submit" class="btn btn-light"><i class="fa fa-thumbs-up"></i></button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
  </div>
</div>