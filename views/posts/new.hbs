<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    <form action="/posts" method="post">

      <div class="d-grid mb-2">
        <textarea name="text" rows="5" cols="40"></textarea>
      </div>

      <div class="d-grid mb-2">
        <button class="btn btn-primary btn-sm text-uppercase" type="submit">Post</button>
      </div>

       <div class="d-grid">
        <a class="btn btn-secondary btn-sm text-uppercase" href="/posts">Cancel</a>
      </div>

    </form>
  </div>
</div>