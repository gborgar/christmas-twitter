<div class="row justify-content-center">
  <div class="col-12 col-sm-4">
    <h4>Login</h4>
    <form action="/login" method="post">

      <div class="input-group mb-1">
        <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
        <input type="text" class="form-control {{#if errors.username}}is-invalid{{/if}}" name="username" value="{{ user.username }}" placeholder="petersmith..." />
        <div class="invalid-feedback">{{ errors.username }}</div>
      </div>

      <div class="input-group mb-1">
        <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
        <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" name="password" placeholder="Password..." />
        <div class="invalid-feedback">{{ errors.password }}</div>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-sm text-uppercase">Login</button>
        <hr>
        <a href="/register" class="btn btn-secondary btn-sm text-uppercase">Register</a>
      </div>

    </form>
  </div>
</div>